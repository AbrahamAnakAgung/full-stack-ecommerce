extends ../layouts/nav-layout.pug

block content
   main
      h1.product__page-title List of All Products
      .product__wrapper
         if prods.length > 0
            each product in prods
               - var imgSrc = product.image_url
               .product__card
                  h2.product__title #{product.title}
                  img(src=imgSrc, load="lazy", alt="product").product__image
                  h3.product__price #{product.price} $
                  p.product__description #{product.description}
                  .product__buttons
                     button(type="button").btn.btn-edit
                        a(href="/admin/edit-product/" + product.product_uid) Edit
                     form(action="/admin/delete-product/" + product.product_uid, method="post")
                        button(type="submit").btn.btn-delete Delete
         else
            h2 No Products